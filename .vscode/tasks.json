{
    "version": "2.0.0",
    "command": "sh",
    "args": [
        "-c"
    ],
    "showOutput": "always",
    "suppressTaskName": true,
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
    },
    "tasks": [
        {
            "taskName": "cmake",
            "args": [
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "args": [
                "make -j 8"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}